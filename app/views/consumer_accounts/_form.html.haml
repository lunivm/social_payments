= form_for @consumer_account do |f|
  - if @consumer_account.errors.any?
    #error_explanation
      %h2= "#{pluralize(@consumer_account.errors.count, "error")} prohibited this consumer_account from being saved:"
      %ul
        - @consumer_account.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :consumer
    = f.text_field :consumer
  .field
    = f.label :bank
    = f.text_field :bank
  .field
    = f.label :account
    = f.text_field :account
  .actions
    = f.submit 'Save'
