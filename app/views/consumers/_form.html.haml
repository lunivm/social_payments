= form_for @consumer do |f|
  - if @consumer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@consumer.errors.count, "error")} prohibited this consumer from being saved:"
      %ul
        - @consumer.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :full_name
    = f.text_field :full_name
  .field
    = f.label :passport_number
    = f.text_field :passport_number
  .field
    = f.label :identity_code
    = f.text_field :identity_code
  .field
    = f.label :house
    = f.text_field :house
  .field
    = f.label :house_section
    = f.text_field :house_section
  .field
    = f.label :apartment
    = f.text_field :apartment
  .actions
    = f.submit 'Save'
