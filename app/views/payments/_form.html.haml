= form_for @payment do |f|
  - if @payment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@payment.errors.count, "error")} prohibited this payment from being saved:"
      %ul
        - @payment.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :date
    = f.date_field :date
  .field
    = f.label :paid
    = f.check_box :paid
  .field
    = f.label :report_number
    = f.text_field :report_number
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :sum
    = f.text_field :sum
  .field
    = f.label :code_kfk
    = f.text_field :code_kfk
  .field
    = f.label :code_kek
    = f.text_field :code_kek
  .actions
    = f.submit 'Save'
