%h1 Listing payments

%table
  %thead
    %tr
      %th Date
      %th Paid
      %th Report number
      %th Description
      %th Sum
      %th Code kfk
      %th Code kek
      %th
      %th
      %th

  %tbody
    - @payments.each do |payment|
      %tr
        %td= payment.date
        %td= payment.paid
        %td= payment.report_number
        %td= payment.description
        %td= payment.sum
        %td= payment.code_kfk
        %td= payment.code_kek
        %td= link_to 'Show', payment
        %td= link_to 'Edit', edit_payment_path(payment)
        %td= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' }

%br

